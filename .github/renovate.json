{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "development"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true
    },
    {
      "groupName": "dart-json",
      "matchPackagePatterns": [
        "^json_"
      ]
    },
    {
      "groupName": "jest",
      "matchPackagePatterns": [
        "^jest",
        "^ts-jest"
      ]
    },
    {
      "groupName": "angular",
      "matchPackagePatterns": [
        "^@angular-eslint\\/",
        "^@angular\\/",
        "^@angular-devkit\\/"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION=\"(?<currentValue>.*)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
